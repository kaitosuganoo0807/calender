%body
  = render "header"
  %h1 calender.space
  %table
    %thead
  %tr
    %th Title
    %th Description
    %th Start date
    %th End date
    %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.description
        %td= event.start_date
        %td= event.end_date
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  %h2 calender
  = link_to 'New Event', new_calender_path
  = link_to 'Home Calendar', root_path
  #calendar
= render "footer"