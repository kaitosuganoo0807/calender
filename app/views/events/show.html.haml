      %p.title
        %strong タイトル:
        = @event.title
      %p.description
        %strong 詳細:
        = @event.description
      %p.start-date
        %strong 時間(始まり):
        = @event.start_date
      %p.end-date
        %strong 時間(終わり):
        = @event.end_date
