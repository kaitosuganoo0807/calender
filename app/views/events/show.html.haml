        = link_to 'Edit', edit_event_path(@event),class:"edit-show"

        = link_to 'Destroy', @event,class:"destroy-show", method: :delete, data: { confirm: 'Are you sure?' }

        = link_to 'Back', events_path,class:"back-show"

